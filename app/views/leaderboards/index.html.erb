        <h1>Company Board</h1>
        <div class="table-responsive">                
          <table id="mytable" class="table table-bordred table-striped table-hover">
            <thead>
              <th>Company name</th>
              <th>NeuroPoints</th>
            </thead>

            <tbody>
              <% @companies.each do |company| %>
