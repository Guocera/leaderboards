<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Branch Out Leaderboards</title>
</head>
<body>
  <%= render "layouts/nav" %>

  <p id="notice"><%= notice %></p>

  <div class="container">
    <div class="row">        
      <div class="col-md-12">
        <h1>Listing People</h1>
        <div class="table-responsive">                
          <table id="mytable" class="table table-bordred table-striped table-hover">
            <thead>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
            </thead>

            <tbody>
              <% @people.each_with_index do |person, i| %>
                <tr>
                  <td><%= person['first_name'] %></td>
                  <td><%= person['last_name'] %></td>
                  <td><%= person['email'] %></td>
                </tr>    
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

